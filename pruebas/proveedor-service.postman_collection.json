{
  "info": {
    "_postman_id": "proveedor-service-uuid",
    "name": "Proveedor Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    { "name": "Obtener todos los proveedores", "request": { "method": "GET", "url": { "raw": "http://localhost:8084/api/proveedores", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores"] } } },
    { "name": "Obtener proveedor por ID", "request": { "method": "GET", "url": { "raw": "http://localhost:8084/api/proveedores/:id", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", ":id"] } } },
    { "name": "Obtener proveedor por NIT/RUC", "request": { "method": "GET", "url": { "raw": "http://localhost:8084/api/proveedores/nit/:nitRuc", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", "nit", ":nitRuc"] } } },
    { "name": "Obtener proveedores por estado", "request": { "method": "GET", "url": { "raw": "http://localhost:8084/api/proveedores/estado/:estado", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", "estado", ":estado"] } } },
    { "name": "Buscar proveedores por nombre", "request": { "method": "GET", "url": { "raw": "http://localhost:8084/api/proveedores/buscar?nombre=Proveedor", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", "buscar"], "query": [ { "key": "nombre", "value": "Proveedor" } ] } } },
    { "name": "Crear proveedor", "request": { "method": "POST", "url": { "raw": "http://localhost:8084/api/proveedores", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores"] }, "body": { "mode": "raw", "raw": "{ }", "options": { "raw": { "language": "json" } } } } },
    { "name": "Actualizar proveedor", "request": { "method": "PUT", "url": { "raw": "http://localhost:8084/api/proveedores/:id", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", ":id"] }, "body": { "mode": "raw", "raw": "{ }", "options": { "raw": { "language": "json" } } } } },
    { "name": "Cambiar estado de proveedor", "request": { "method": "PATCH", "url": { "raw": "http://localhost:8084/api/proveedores/:id/estado?estado=INACTIVO", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", ":id", "estado"], "query": [ { "key": "estado", "value": "INACTIVO" } ] } } },
    { "name": "Eliminar proveedor", "request": { "method": "DELETE", "url": { "raw": "http://localhost:8084/api/proveedores/:id", "host": ["localhost"], "port": "8084", "path": ["api", "proveedores", ":id"] } } }
  ]
